package dev.jason.auction;

import java.util.HashMap;
import java.util.Map;

public class Auction {
	// Data Members
	private Map<String, Salesman> salesaccounts = new HashMap<String, Salesman>();
	private Map<String, Salesman> loggedsalesaccounts = new HashMap<String, Salesman>();
	private Map<String, Bidder> bidderaccounts = new HashMap<String, Bidder>();
	private Map<String, Bidder> loggedbidderaccounts = new HashMap<String, Bidder>();
	
	// There is no error checking for duplicate usernames at this time
	// Getters and Setters
	public void addSalesAccount(Salesman salesman) {
		salesaccounts.put(salesman.getUsername(), salesman);
	}
	public Salesman getSalesAccount(String username) {
		return salesaccounts.get(username);
	}
	public void addBidderAccount(Bidder bidder) {
		this.bidderaccounts.put(bidder.getUsername(), bidder);
	}
	public Bidder getBidderAccount(String username) {
		return this.bidderaccounts.get(username);
	}
	public Salesman getLoggedSalesman(String username) {
		return this.getLoggedSalesman(username);
	}
	private void addLoggedSalesman(Salesman salesman) {
		this.loggedsalesaccounts.put(salesman.getUsername(), salesman);
	}
	public Bidder getLoggedBidder(String username) {
		return this.loggedbidderaccounts.get(username);
	}
	private void setLoggedBidder(Bidder bidder) {
		this.loggedbidderaccounts.put(bidder.getUsername(), bidder);
	}
	
	// Methods
	// TODO:: login method
	
	// TODO:: isLoggedin bidder and sales

}
